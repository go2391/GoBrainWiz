<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <TextView
            android:id="@+id/registration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="@string/request_password"
            android:textColor="@color/blueSecondary"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registration_label"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">


            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_30"
                android:src="@drawable/ic_lock_reset" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email_mobile_no"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_phone_blue"
                    android:hint="@string/mobile"
                    android:inputType="number"

                    />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/confirm"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/button_bg_blue"
                android:minWidth="160dp"
                android:padding="@dimen/dimen_5"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:translationZ="@dimen/dimen_10" />

        </LinearLayout>


    </RelativeLayout>
</layout>
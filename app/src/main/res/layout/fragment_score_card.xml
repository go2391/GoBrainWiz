<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_100">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/score_card_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:minHeight="@dimen/dimen_50"
            android:minWidth="@dimen/dimen_50"
            android:progress="50"
            android:secondaryProgressTint="@color/greenSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/score_card_progress"
            android:orientation="vertical">


            <TextView
                android:id="@+id/score_card_total_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="end"
                android:text="@string/total_questions"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/score_card_questions_attempted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="end"
                android:text="@string/questions_attempted"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/score_card_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="end"
                android:text="@string/correct"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_14" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
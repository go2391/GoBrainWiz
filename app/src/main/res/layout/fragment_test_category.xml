<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/test_category1"
                style="@style/CardViewStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_orange"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:id="@+id/test_category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:fontFamily="@font/bold"
                        android:gravity="start"
                        android:text="@string/arithmetic"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_24" />


                    <TextView
                        android:id="@+id/test_category_topics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/test_category_name"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/topics"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dimen_15"
                        android:layout_below="@id/test_category_name"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_toEndOf="@id/test_category_topics"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/test_category_tests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_name"
                        android:layout_toEndOf="@id/divider"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/tests"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_arithmetic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_tests"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/arrow_arithmetic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recycle_arithmetic"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/arrow_selector" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/test_category2"
                style="@style/CardViewStyle">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_blue"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:id="@+id/test_category_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:fontFamily="@font/bold"
                        android:gravity="start"
                        android:text="@string/logical_reasoning"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_24" />


                    <TextView
                        android:id="@+id/test_category_topics1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/test_category_name1"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/topics"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dimen_15"
                        android:layout_below="@id/test_category_name1"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_toEndOf="@id/test_category_topics1"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/test_category_tests1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_name1"
                        android:layout_toEndOf="@id/divider1"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/tests"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_logical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_tests1"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/arrow_logical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recycle_logical"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/arrow_selector" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/test_category3"
                style="@style/CardViewStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_red"
                    android:padding="@dimen/dimen_16">

                    <TextView
                        android:id="@+id/test_category_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:fontFamily="@font/bold"
                        android:gravity="start"
                        android:text="@string/verbal_ability"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_24" />


                    <TextView
                        android:id="@+id/test_category_topics2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/test_category_name2"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/topics"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dimen_15"
                        android:layout_below="@id/test_category_name2"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_toEndOf="@id/test_category_topics2"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/test_category_tests2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_name2"
                        android:layout_toEndOf="@id/divider2"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="@string/tests"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_verbal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/test_category_tests2"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/arrow_verbal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/recycle_verbal"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/arrow_selector" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
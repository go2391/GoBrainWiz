<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_notification_title"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@drawable/primary_border_rounded_border"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_6"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/rb_promotions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_notification_tab_selector"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingTop="@dimen/dimen_12"
                android:text="@string/practicetests"
                android:textAllCaps="true"
                android:textColor="@drawable/my_notification_tab_text_selector"
                android:textSize="@dimen/font_16" />

            <RadioButton
                android:id="@+id/rb_general"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_notification_tab_selector"
                android:button="@null"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingTop="@dimen/dimen_12"
                android:text="@string/onlinetest"
                android:textAllCaps="true"
                android:textColor="@drawable/my_notification_tab_text_selector"
                android:textSize="@dimen/font_16" />
        </RadioGroup>


        <brainwiz.gobrainwiz.utils.SlidingTabLayout
            android:id="@+id/sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueSecondary"
            android:minHeight="@dimen/dimen_50"
            android:visibility="gone">

            <!--<android.support.v4.view.PagerTabStrip-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        </brainwiz.gobrainwiz.utils.SlidingTabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_tab_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:padding="@dimen/dimen_10"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/question_text_selector"
                app:tabGravity="fill"
                app:tabMode="fixed" />

        </android.support.v4.view.ViewPager>


    </LinearLayout>
</layout>
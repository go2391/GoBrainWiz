<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/tv_weekly_schedule_layout"
                style="@style/CardViewStyle"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_blue"
                    android:elevation="@dimen/dimen_5"
                    android:padding="@dimen/gradient_padding">

                    <TextView
                        android:id="@+id/tv_weekly_schedule"
                        style="@style/HomeGridTextStyle"
                        android:layout_centerInParent="true"
                        android:text="@string/weekly_schedule" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/tv_weekly_schedule"
                        android:padding="@dimen/dimen_5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_calendar" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/tv_video_gallery_layout"
                style="@style/CardViewStyle"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_orange"
                    android:padding="@dimen/gradient_padding">


                    <TextView
                        android:id="@+id/tv_video_gallery"
                        style="@style/HomeGridTextStyle"
                        android:layout_centerInParent="true"
                        android:text="@string/video_gallery" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tv_video_gallery"
                        android:src="@drawable/video_gallery" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/tv_online_tests_layout"
                style="@style/CardViewStyle"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_pink"
                    android:padding="@dimen/gradient_padding">

                    <TextView
                        android:id="@+id/tv_online_tests"
                        style="@style/HomeGridTextStyle"
                        android:layout_centerInParent="true"
                        android:text="@string/online_tests" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tv_online_tests"
                        android:src="@drawable/online_tests" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/tv_practice_tests_layout"
                style="@style/CardViewStyle"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_green"
                    android:padding="@dimen/gradient_padding">


                    <TextView
                        android:id="@+id/tv_practice_tests"
                        style="@style/HomeGridTextStyle"
                        android:layout_centerInParent="true"
                        android:text="@string/practice_tests" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tv_practice_tests"
                        android:src="@drawable/practice_tests" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_fill_bg"
    app:cardElevation="@dimen/dimen_5"
    app:cardCornerRadius="@dimen/dimen_10"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10"
        android:weightSum="5">

        <ImageView
            android:id="@+id/review_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:scaleType="fitCenter"
            android:src="@drawable/reviews" />


        <TextView
            android:id="@+id/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_toEndOf="@id/review_star"
            android:fontFamily="@font/raleway_medium"
            android:gravity="start"
            android:text="@string/reviews_this_app"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/review_title"
            android:layout_below="@id/review_title"
            android:layout_toStartOf="@id/review_arrow"
            android:fontFamily="@font/raleway_regular"
            android:gravity="start"
            android:text="@string/please_review_this_app_and_encourage_us_to_give_better_services_to_you"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/font_12" />


        <ImageView
            android:id="@+id/review_arrow"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@drawable/circle_gradient_bg"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_arrow_forward" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
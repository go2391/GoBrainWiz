<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_fill_bg"
    app:cardElevation="@dimen/dimen_5"
    app:cardCornerRadius="@dimen/dimen_10"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10"
        android:weightSum="5">

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:scaleType="centerInside"
            android:src="@drawable/share" />


        <TextView
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_toEndOf="@id/share_icon"
            android:fontFamily="@font/bold"
            android:gravity="start"
            android:text="@string/share_with_friends"
            android:textColor="@color/bluePrimary"
            android:textSize="@dimen/font_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/share_title"
            android:layout_below="@id/share_title"
            android:layout_toStartOf="@id/share_arrow"
            android:fontFamily="@font/regular"
            android:gravity="start"
            android:text="@string/help_your_friends_to_know_this_app_and_make_them_so_benefices_as_you_in_case_of_crt"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/font_12" />

        <ImageView
            android:id="@+id/share_arrow"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@drawable/circle_gradient_bg"
            android:padding="@dimen/dimen_5"
            android:src="@drawable/ic_arrow_forward" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
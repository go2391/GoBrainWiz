<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16">


            <TextView
                android:id="@+id/video_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/video_item_play_pause"
                android:fontFamily="@font/semibold"
                android:maxLines="2"
                android:text="Title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/video_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_item_title"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/medium"
                android:text="Description"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_12" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/video_item_play_pause"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:tint="@color/blueSecondary"
                app:srcCompat="@drawable/ic_arrow_right" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
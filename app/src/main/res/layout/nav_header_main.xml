<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/blueSecondary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/imageView_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="@dimen/dimen_20"
        android:background="@drawable/white_profile_border"
        android:gravity="center"
        android:padding="@dimen/dimen_2">

        <brainwiz.gobrainwiz.RoundishImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/nav_header_desc"
            android:drawableBottom="@drawable/ic_pencil"
            app:cornerRadius="120dp"
            app:roundedCorners="ALL"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </RelativeLayout>

    <TextView

        android:id="@+id/welcome_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageView_layout"
        android:fontFamily="@font/bold"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/textView_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_label"
        android:layout_toEndOf="@id/imageView_layout"
        android:fontFamily="@font/bold"
        android:text="User"
        android:textSize="@dimen/font_18" />


    <TextView
        android:id="@+id/textView_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_user_name"
        android:layout_toEndOf="@id/imageView_layout"
        android:fontFamily="@font/semibold"
        android:text="User"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/textView_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_user_email"
        android:layout_toEndOf="@id/imageView_layout"
        android:fontFamily="@font/semibold"
        android:text="User"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/textView_user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_user_phone"
        android:layout_toEndOf="@id/imageView_layout"
        android:fontFamily="@font/semibold"
        android:text="User"
        android:textSize="@dimen/font_14" />


</RelativeLayout>

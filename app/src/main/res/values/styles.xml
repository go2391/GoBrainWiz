<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppBackground" parent="MatchMatch">
        <item name="android:background">@color/background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="EditTextStyle" parent="MatchWrap">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>

    </style>


    <style name="HeaderLayoutStyle" parent="MatchWrap">
        <item name="android:background">@color/hint</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


    <style name="HeaderTitleTextStyle" parent="MatchWrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HeaderTextStyle" parent="WrapWrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="HomeGridHeaderTextStyle" parent="HeaderTextStyle">
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="HomeGridTextStyle" parent="WrapWrap">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>


    <style name="HomeGridHeaderImageStyle" parent="WrapWrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/action_settings</item>
        <item name="android:padding">@dimen/dimen_5</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="TextStyle" parent="WrapWrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlaceOrderTextStyle" parent="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="OrderItemTextStyle" parent="TextStyle">
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="OrderDetailsItemsTextStyle" parent="TextStyle">
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="ButtonStyle" parent="MatchWrap">
        <item name="android:background">@drawable/button_selector_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonBlackStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_bg_black</item>
    </style>

    <style name="ButtonGrayStyle" parent="ButtonStyle">
        <item name="android:background">@color/hint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>

    </style>

    <style name="AlertStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:height">300dp</item>
    </style>

    <style name="RecyclerStyle" parent="MatchMatch">
        <item name="android:scrollbars">vertical</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


    <style name="EmptyListText" parent="TextStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_20</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopHeaderTextViewStyle" parent="WrapWrap">
        <item name="android:background">@drawable/button_bg_white</item>
        <item name="android:drawablePadding">@dimen/dimen_14</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="LeftMenuTextViewStyle" parent="MatchWrap">
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:paddingLeft">@dimen/dimen_30</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:drawablePadding">@dimen/dimen_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/dimen_10</item>
        <item name="cardElevation">@dimen/dimen_5</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
